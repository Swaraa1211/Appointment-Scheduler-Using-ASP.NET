@model IEnumerable<Appointment.Models.SchedulerModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
.my-button {
            background-color: #0F52BA; /* set background color */
  color: #fff; /* set text color */
  font-size: 16px; /* set font size */
  padding: 3px 5px; 
  margin: 3px; /* set margin (top, right, bottom, left) */
            border: 3px solid #000000; /* remove border */
  border-radius: 5px; /* add border radius */
  cursor: pointer; /* add cursor pointer on hover */
}
.my-button:hover {
                background-color: #3399FF; /* change background color on hover */
}

        .delete-button {
            background-color: #0F52BA; /* set background color */
            color: #fff; /* set text color */
            font-size: 16px; /* set font size */
            padding: 3px 5px; 
            margin: 3px; /* set margin (top, right, bottom, left) */
            border: 3px solid #000000; /* remove border */
            border-radius: 5px; /* add border radius */
            cursor: pointer; /* add cursor pointer on hover */
        }

            .delete-button:hover {
                background-color: #990004; /* change background color on hover */
            }
            .row-highlight{
                background-color:aquamarine;
            }
    </style>
</head>

<h2>Index</h2>


    @*<a asp-action="Create"><button class="btn btn-primary" type="submit">Create</button></a>*@
    <div style="overflow: auto;">
        <a asp-action="Create"><button class="my-button" type="submit">Create</button></a>
        <a asp-action="Search" style="float: right; margin-right: 10px;"><button class="my-button" type="submit">Search</button></a>
    </div>
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @*var current_date = new DateTime();*@
            DateTime currentDateTime = DateTime.Now;
            @*<tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
