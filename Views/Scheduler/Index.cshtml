                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId"><button class="my-button" type="submit">Edit</button></a>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId"><button class="my-button" type="submit">Details</button></a>
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId"><button class="delete-button" type="submit">Delete</button></a>
                </td>
            </tr>*@
            if (currentDateTime > item.EndTime)
            {
                <div class="row-highlight">
                  <tr style="background-color:#D21">
                        <td>
                                @Html.DisplayFor(modelItem => item.AppointmentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
